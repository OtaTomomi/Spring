<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board.mapper.ReadMapper">
	<resultMap type="board.entity.Read" id="ReadResult">
		<result column="user_id" property="userId" />
		<result column="message_id" property="messageId" />
		<result column="read_or_not" property="readOrNot" />
	</resultMap>
	<select id="readOrNot" resultMap="ReadResult">
	select exists(select * from reads where user_id = #{userId} and message_id = #{messageId}) as read_or_not
	</select>
</mapper>
